{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "SUA_CHAVE_AQUI",
    "Issuer": "ApiGateway",
    "Audience": "Microservices",
    "ExpiryMinutes": 60
  },
  "ReverseProxy": {
    "Routes": {
      "salesRoute": {
        "ClusterId": "salesCluster",
        "Match": {
          "Path": "/sales/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/sales"
          },
          {
            "PathPrefix": "/api"
          }
        ]
      },
      "stockRoute": {
        "ClusterId": "stockCluster",
        "Match": {
          "Path": "/stock/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/stock"
          },
          {
            "PathPrefix": "/api"
          }
        ]
      }
    },
    "Clusters": {
      "salesCluster": {
        "Destinations": {
          "salesApi": {
            "Address": "http://localhost:5102/"
          }
        }
      },
      "stockCluster": {
        "Destinations": {
          "stockApi": {
            "Address": "http://localhost:5103/"
          }
        }
      }
    }
  }
}